{require_otp_vsn_min, "R16"}.

{deps, []}.

{erl_opts,
 [debug_info,
  warnings_as_errors,
  strict_validation,
  warn_bif_clash,
  warn_deprecated_function,
  warn_export_all,
  warn_export_vars,
  warn_exported_vars,
  warn_obsolete_guard,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_unused_record,
  warn_unused_vars
 ]}.

{xref_checks,
 [
  undefined_function_calls,
  undefined_functions,
  locals_not_used,
  deprecated_function_calls,
  deprecated_functions
 ]}.

{cover_enabled, true}.

{ct_extra_params, ""}.

{pre_hooks,
 [{clean, "rm -rf erl_crash.dump ebin test/logs test/*.beam"}
 ]}.
